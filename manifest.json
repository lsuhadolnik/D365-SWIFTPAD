{
  "background": {
    "service_worker": "app/scripts/background.ts"
  },
  "action": {
    "default_title": "Level up for Dynamics 365/Power Apps",
    "default_popup": "app/pages/options.html"
  },
  "name": "Level up for Dynamics 365/Power Apps",
  "author": "Natraj Yegnaraman",
  "description": "Quickly perform advanced/hidden actions in Dynamics 365/Power Apps, without bookmarklets.",
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "app/scripts/app.ts"
      ]
    }
  ],
  "host_permissions": [
    "*://*.dynamics.com/api/*",
    "*://*.dynamics.com.mcas.ms/*"
  ],
  "permissions": [
    "scripting",
    "storage",
    "activeTab",
    "declarativeNetRequest"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "app/libraries/Sdk.Soap.min.js",
        "app/scripts/levelup.extension.ts"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "version": "3.6.3",
  "manifest_version": 3
}